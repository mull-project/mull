{
    "version": 8,
    "configurePresets": [
        {
            "name": "mull",
            "displayName": "mull",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build.dir",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "clang-12",
                "CMAKE_CXX_COMPILER": "clang++-12",
                "CMAKE_PREFIX_PATH": "/usr/lib/llvm-12/cmake/;/usr/lib/cmake/clang-12/"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "build-debug",
            "configurePreset": "mull"
        },
        {
            "name": "tests-lit",
            "configurePreset": "mull",
            "targets": "tests-lit"
        },
        {
            "name": "run-mull-tests",
            "configurePreset": "mull",
            "targets": "run-mull-tests"
        }
    ],
    "workflowPresets": [
        {
            "name": "build",
            "steps": [
                {
                    "type": "configure",
                    "name": "mull"
                },
                {
                    "type": "build",
                    "name": "build-debug"
                },
                {
                    "type": "build",
                    "name": "run-mull-tests"
                },
                {
                    "type": "build",
                    "name": "tests-lit"
                }
            ]
        }
    ]
}

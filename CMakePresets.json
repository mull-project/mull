{
    "version": 8,
    "configurePresets": [
        {
            "name": "mull",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build.dir",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_C_COMPILER": "clang-12",
                "CMAKE_CXX_COMPILER": "clang++-12",
                "CMAKE_PREFIX_PATH": "/usr/lib/llvm-12/cmake/;/usr/lib/cmake/clang-12/"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "unit-tests",
            "configurePreset": "mull",
            "targets": "run-unit-tests"
        },
        {
            "name": "integration-tests",
            "configurePreset": "mull",
            "targets": "run-integration-tests"
        },
        {
            "name": "package",
            "configurePreset": "mull",
            "targets": "package"
        }
    ],
    "workflowPresets": [
        {
            "name": "build-and-test",
            "steps": [
                {
                    "type": "configure",
                    "name": "mull"
                },
                {
                    "type": "build",
                    "name": "unit-tests"
                },
                {
                    "type": "build",
                    "name": "integration-tests"
                }
            ]
        },
        {
            "name": "package",
            "steps": [
                {
                    "type": "configure",
                    "name": "mull"
                },
                {
                    "type": "build",
                    "name": "package"
                }
            ]
        }
    ]
}

  "runArgs": [
    "--name",
    "mull-{{OS_KEY}}-llvm-{{LLVM_VERSION}}"
  ],
  "postCreateCommand": "infrastructure/devcontainer_post_create.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-extension-pack",
        "imgildev.vscode-mustache-snippets",
        "github.vscode-github-actions",
        "revng.llvm-ir",
        "rreverser.llvm",
        "bazelbuild.vscode-bazel"
      ]
    }
  }
}
